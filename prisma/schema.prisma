enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum NotificationType {
  SYSTEM
  TASK
  EXPERIMENT
  ANIMAL_ALERT
  BREEDING
