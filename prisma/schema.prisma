// ===================================================================
// НОВАЯ АРХИТЕКТУРА PRISMA SCHEMA
// ===================================================================
// Эта схема вводит разделение на:
// 1. Organization (Компании) - платящие клиенты
// 2. Organization Owners - владельцы компаний (создатели)
// 3. Regular Users - приглашенные сотрудники
// 
// НЕ ПРИМЕНЯТЬ СРАЗУ! Требуется миграция данных.
// ===================================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ===================================================================
// НОВЫЕ МОДЕЛИ - ОРГАНИЗАЦИИ
// ===================================================================

model Organization {
  id            String                @id @default(uuid())
  name          String                @unique
  description   String?
  ownerId       String                // Владелец компании (платит)
  type          OrganizationType      @default(COMPANY)
  isActive      Boolean               @default(true)
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  
  // Отношения
  owner         User                  @relation("OrganizationOwner", fields: [ownerId], references: [id])
  vessels       Vessel[]              // Корабли принадлежат организации
  members       OrganizationMember[]  // Члены организации
  subscriptions Subscription[]        // Подписки на уровне организации
  invitations   Invitation[]
  
  @@index([ownerId])
  @@index([isActive])
}

model OrganizationMember {
  id             String       @id @default(uuid())
  userId         String
  organizationId String
  role           OrgRole      @default(MEMBER)
  invitedBy      String?      // ID пользователя, который пригласил
  status         MemberStatus @default(ACTIVE)
  joinedAt       DateTime     @default(now())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@unique([userId, organizationId])
  @@index([organizationId])
  @@index([userId])
}

// ===================================================================
// ОБНОВЛЕННАЯ МОДЕЛЬ USER
// ===================================================================

model User {
  id                      String                @id @default(uuid())
  email                   String                @unique
  address                 String?
  contactPhone            String?
  firstName               String?
  lastName                String?
  institution             String?
  password                String
  confirmedEmail          Boolean               @default(false)
  userType                UserType              @default(REGULAR) // NEW: тип пользователя
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  
  // Существующие отношения
  notifications           Notification[]
  tasks                   Task[]
  vessels                 UserVessel[]
  invitations             Invitation[]          @relation("UserInvitations")
  
  // NEW: Отношения с организациями
  ownedOrganizations      Organization[]        @relation("OrganizationOwner") // Компании, которыми владеет
  organizationMemberships OrganizationMember[]  // Компании, в которых состоит как member
  
  @@index([email])
  @@index([userType])
}

// ===================================================================
// ОБНОВЛЕННАЯ МОДЕЛЬ VESSEL
// ===================================================================

model Vessel {
  id              String         @id @default(uuid())
  name            String
  organizationId  String         // NEW: привязка к организации
  username        String
  position        Role           @default(SUPPLIER)
  description     String?
  isActive        Boolean        @default(true) // NEW: можно деактивировать корабль
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  organization    Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  requests        Request[]
  users           UserVessel[]
  invitations     Invitation[]   @relation("VesselInvitations")
  tasks           Task[]
  
  @@index([organizationId])
  @@index([isActive])
}

// ===================================================================
// ОБНОВЛЕННАЯ МОДЕЛЬ SUBSCRIPTION (на уровне организации)
// ===================================================================

model Subscription {
  id              String             @id @default(uuid())
  organizationId  String             // Изменено с vesselId
  planId          String
  startDate       DateTime
  endDate         DateTime
  status          SubscriptionStatus
  maxUsers        Int                // Лимит пользователей
  maxVessels      Int?               // NEW: лимит кораблей
  paymentMethod   String?
  autoRenew       Boolean            @default(true)
  trialEndsAt     DateTime?          // NEW: дата окончания триала
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  
  payments        Payment[]
  organization    Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  plan            Plan               @relation(fields: [planId], references: [id])
  
  @@index([organizationId])
  @@index([status])
}

// ===================================================================
// ОБНОВЛЕННАЯ МОДЕЛЬ PLAN
// ===================================================================

model Plan {
  id            String         @id @default(uuid())
  name          String
  description   String?
  price         Float
  currency      String         @default("CAD")
  billingCycle  BillingCycle
  maxUsers      Int            // Максимум пользователей в плане
  maxVessels    Int?           // NEW: Максимум кораблей в плане
  features      Json?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]
  
  @@index([isActive])
}

model Payment {
  id             String        @id @default(uuid())
  subscriptionId String
  amount         Float
  currency       String        @default("CAD")
  paymentDate    DateTime
  paymentMethod  String
  transactionId  String?
  status         PaymentStatus
  invoiceNumber  String?
  notes          String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  subscription   Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@index([status])
}

// ===================================================================
// ОБНОВЛЕННАЯ МОДЕЛЬ INVITATION
// ===================================================================

model Invitation {
  id              String           @id @default(uuid())
  email           String
  code            String
  organizationId  String           // NEW: приглашение в организацию
  vesselId        String?          // Опционально - конкретный корабль
  invitedBy       String
  role            Role             @default(SUPPLIER)
  orgRole         OrgRole?         // NEW: роль в организации
  token           String           @unique
  expiresAt       DateTime
  status          InvitationStatus @default(PENDING)
  createdAt       DateTime         @default(now())
  usedAt          DateTime?
  
  organization    Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  vessel          Vessel?          @relation("VesselInvitations", fields: [vesselId], references: [id], onDelete: Cascade)
  inviter         User             @relation("UserInvitations", fields: [invitedBy], references: [id])
  
  @@unique([email, organizationId])
  @@index([organizationId])
  @@index([status])
}

model UserVessel {
  id              String       @id @default(uuid())
  userId          String
  vesselId        String
  role            Role
  joinedAt        DateTime     @default(now())
  invitedBy       String?
  accessStatus    AccessStatus @default(ACTIVE)
  accessStartDate DateTime     @default(now())
  accessEndDate   DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  vessel          Vessel       @relation(fields: [vesselId], references: [id], onDelete: Cascade)
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, vesselId])
  @@index([userId])
  @@index([vesselId])
}

model VerificationCode {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([email])
}

// ===================================================================
// ОСТАЛЬНЫЕ МОДЕЛИ (БЕЗ ИЗМЕНЕНИЙ)
// ===================================================================

model Request {
  id             String             @id @default(uuid())
  tsiConfirm     TSIConfirm?        @default(NOT_CONFIRMED)
  identifier     String
  poStatus       PoStatus           @default(WITHOUT_PO)
  poNumber       String?
  paymentStatus  PaymentStatus?     @default(CREDIT_NOT_PAID)
  description    String?
  wayBillType    WayBillType?       @default(NO_WAYBILL)
  wayBillNumber  String?
  storeLocation  String?
  status         RequestStatus      @default(WAITING)
  offerNumber    String?
  companyOfOrder String?
  countryOfOrder String?
  requestType    RequestType        @default(ENGINE)
  vesselId       String
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  
  vessel         Vessel             @relation(fields: [vesselId], references: [id])
  
  @@unique([identifier, vesselId])
  @@index([vesselId])
  @@index([status])
}


model Task {
  id           String       @id @default(uuid())
  title        String
  description  String?
  vesselId     String
  assignedToId String
  dueDate      DateTime?
  vessel       Vessel       @relation(fields: [vesselId], references: [id])
  status       TaskStatus   @default(PENDING)
  priority     TaskPriority @default(MEDIUM)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  assignedTo   User         @relation(fields: [assignedToId], references: [id])
  
  @@index([vesselId])
  @@index([assignedToId])
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  title     String
  message   String
  isRead    Boolean          @default(false)
  type      NotificationType
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([isRead])
}

// ===================================================================
// ENUMS
// ===================================================================

// NEW ENUMS
enum UserType {
  ORGANIZATION_OWNER  // Владелец организации (платит за подписку)
  REGULAR             // Обычный пользователь (приглашенный)
}

enum OrganizationType {
  COMPANY             // Компания
  INDIVIDUAL          // Индивидуальный предприниматель
}

enum OrgRole {
  ADMIN               // Администратор организации (полный доступ)
  MANAGER             // Менеджер (управление пользователями и кораблями)
  MEMBER              // Обычный член (только доступ к назначенным кораблям)
}

enum MemberStatus {
  ACTIVE              // Активный член
  SUSPENDED           // Приостановлен
  INVITED             // Приглашен, но еще не присоединился
  REMOVED             // Удален из организации
}

// EXISTING ENUMS
enum BillingCycle {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELED
  TRIAL
  PENDING
}

enum TSIConfirm {
  CONFIRMED_WITH_NOTE
  NOT_CONFIRMED
  IN_PROGRESS
  CONFIRMED
}

enum PaymentStatus {
  PREPAYMENT_NOT_PAID
  PREPAYMENT_PAID
  CREDIT_NOT_PAID
  CREDIT_PAID
}

enum Role {
  PROCUREMENT_SPECIALIST
  FINANCIAL_SPECIALIST
  HEAD_OF_DEPARTMENT
  SAFETY_SPECIALIST
  VESSEL_MANAGER
  TEAM_LEADER
  SUPPLIER
  DIRECTOR
  GUEST
  TSI
}

enum AccessStatus {
  ACTIVE
  SUSPENDED
  REVOKED
  PENDING
}

enum FieldType {
  TEXT
  NUMBER
  BOOLEAN
  DATE
  DROPDOWN
  MULTISELECT
}

enum Sex {
  MALE
  FEMALE
  UNKNOWN
}

enum RequestStatus {
  WAITING
  ORDERED
  RECEIVED
  ON_HOLD
  CANCELLED
}

enum PoStatus {
  WITHOUT_PO
  PO_DONE
}

enum RequestType {
  ENGINE
  ELECTRICAL
  DECK
}

enum RecordType {
  ROUTINE_CHECK
  MEDICATION
  SAMPLING
  OBSERVATION
  TREATMENT
  EMERGENCY
}

enum ActivityLevel {
  VERY_LOW
  LOW
  NORMAL
  HIGH
  VERY_HIGH
}

enum BreedingStatus {
  PLANNED
  ACTIVE
  SUCCESSFUL
  FAILED
  CANCELED
